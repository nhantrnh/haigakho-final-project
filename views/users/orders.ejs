<!DOCTYPE html>
<html>
  <head>
    <title><%= title %> | Hagako Web</title>
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link href="css/tiny-slider.css" rel="stylesheet" />
    <link href="css/style.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <%- include('../partials/header', {page: page}) %>
    <main class="container">
      <div class="orders-container">
        <h1>My Orders</h1>

        <div class="orders-list">
          <% if (locals.orders && orders.length > 0) { %> <%
          orders.forEach(order => { %>
          <div class="order-card">
            <div class="order-header">
              <span class="order-id"
                >#<%= order._id.toString().slice(-8).toUpperCase() %></span
              >
              <span class="order-date">
                <i class="far fa-calendar-alt me-2"></i>
                <%= new Date(order.createdAt).toLocaleDateString('vi-VN') %>
              </span>
              <span class="order-status <%= order.status.toLowerCase() %>">
                <i class="fas fa-circle me-2"></i>
                <%= order.status %>
              </span>
            </div>

            <div class="order-items">
              <% order.items.forEach(item => { %>
              <div class="order-item">
                <img
                  src="<%= item.product.image %>"
                  alt="<%= item.product.name %>"
                  class="order-item-image"
                />
                <div class="order-item-details">
                  <div class="order-item-name"><%= item.product.name %></div>
                  <div class="order-item-price">
                    <%= item.price.toLocaleString() %> VNĐ
                  </div>
                  <div class="order-item-quantity">
                    Số lượng: <%= item.quantity %>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>

            <div class="order-footer">
              <span class="order-total">
                <i class="fas fa-receipt me-2"></i>
                Tổng: <%= order.total.toLocaleString() %> VNĐ
              </span>
              <button
                class="btn btn-primary"
                onclick="viewOrderDetails('<%= order._id %>')"
              >
                <i class="fas fa-eye me-2"></i>
                View Details
              </button>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div class="empty-orders">
            <i
              class="fas fa-shopping-bag fa-3x mb-4"
              style="color: #3b5d50"
            ></i>
            <p>You have no orders</p>
            <a href="/shop" class="btn btn-primary">
              <i class="fas fa-shopping-cart me-2"></i>
              Buy now
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </main>
    <%- include('../partials/footer') %>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/tiny-slider.js"></script>
    <script src="js/custom.js"></script>
  </body>
</html>
