<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="author" content="Untree.co" />
    <link rel="shortcut icon" href="favicon.png" />

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link href="css/tiny-slider.css" rel="stylesheet" />
    <link href="css/style.css" rel="stylesheet" />
    <title>HAGAKO</title>
    <style>
      .order-dialog {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1000;
        background: white;
        border-radius: 8px;
        padding: 0;
        min-width: 500px;
        max-width: 90vw;
        max-height: 90vh;
        overflow-y: auto;
      }

      .dialog-backdrop {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      }
    </style>
  </head>

  <body>
    <!-- Start Header/Navigation -->
    <%- include('../partials/header', { page: 'checkout' }) %>
    <!-- End Header/Navigation -->

    <!-- Start Hero Section -->
    <div class="checkout-header">
      <div class="container">
        <h1 class="checkout-title text-center">Checkout</h1>
        <div class="checkout-steps">
          <div class="step active">
            <div class="step-number">1</div>
            <div class="step-name">Shipping And Payment</div>
          </div>
        </div>
      </div>
    </div>
    <!-- End Hero Section -->

    <div class="untree_co-section">
      <div class="container">
        <div class="row">
          <!-- Left Column - Form -->
          <div class="col-md-7 mb-5 mb-md-0">
            <div class="checkout-step">
              <form id="checkoutForm">
                <h3 class="h4 mb-4 text-black">Shipping Information</h3>
                <div class="row g-3">
                  <div class="col-md-6">
                    <label class="form-label"
                      >First Name <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="firstName"
                      required
                    />
                  </div>
                  <div class="col-md-6">
                    <label class="form-label"
                      >Last Name <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="lastName"
                      required
                    />
                  </div>
                  <div class="col-12">
                    <label class="form-label"
                      >Email <span class="text-danger">*</span></label
                    >
                    <input
                      type="email"
                      class="form-control"
                      id="email"
                      required
                    />
                  </div>
                  <div class="col-12">
                    <label class="form-label"
                      >Phone <span class="text-danger">*</span></label
                    >
                    <input
                      type="tel"
                      class="form-control"
                      id="phone"
                      required
                    />
                  </div>
                  <div class="col-12">
                    <label class="form-label"
                      >Address <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      class="form-control mb-3"
                      id="address"
                      placeholder="Address Detail"
                      required
                    />
                  </div>
                  <div class="col-md-5">
                    <label class="form-label"
                      >Country <span class="text-danger">*</span></label
                    >
                    <select class="form-select" id="country" required>
                      <option value="">Choose...</option>
                      <option>Vietnam</option>
                      <option>Philippines</option>
                      <option>United States</option>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label"
                      >City <span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="city"
                      required
                    />
                  </div>
                </div>

                <hr class="my-4" />

                <h3 class="h4 mb-4 text-black">Payment Method</h3>
                <div class="payment-methods">
                  <div class="payment-method">
                    <input
                      type="radio"
                      name="paymentMethod"
                      id="cod"
                      value="COD"
                      checked
                    />
                    <label for="cod" class="ms-2 d-flex align-items-center">
                      <i class="fas fa-money-bill-wave text-success me-2"></i>
                      <div>
                        <strong>Cash On Delivery (COD)</strong>
                        <p class="text-muted small mb-0">
                          Pay when you receive the package
                        </p>
                      </div>
                    </label>
                  </div>
                </div>
                <div class="mt-4">
                  <button type="submit" class="btn btn-success w-100 py-3">
                    Place Order
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- Right Column - Order Summary -->
          <div class="col-md-5">
            <div class="order-summary checkout-step">
              <h3 class="h4 mb-4 text-black">Order Summary</h3>
              <div class="table-responsive">
                <table class="table table-borderless">
                  <tbody>
                    <!-- Products will be inserted here via JS -->
                    <div id="orderItems"></div>
                  </tbody>
                  <tfoot class="border-top">
                    <tr>
                      <td class="text-black"><strong>Subtotal</strong></td>
                      <td class="text-end text-black" id="subtotal">$0.00</td>
                    </tr>
                    <tr>
                      <td class="text-black"><strong>Shipping</strong></td>
                      <td class="text-end text-black">Free</td>
                    </tr>
                    <tr>
                      <td class="text-black"><strong>Total</strong></td>
                      <td class="text-end text-success" id="total">
                        <strong>$0.00</strong>
                      </td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Start Footer Section -->
    <%- include('../partials/footer') %>
    <!-- End Footer Section -->

    <div id="orderDialog" class="order-dialog shadow-lg"></div>
    <div id="dialogBackdrop" class="dialog-backdrop"></div>

    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/tiny-slider.js"></script>
    <script src="js/custom.js"></script>
    <script src="js/checkout.js"></script>
  </body>
</html>
