<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.3/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.js" defer></script>
</head>
<body class="bg-gray-50">

  <!-- Sidebar -->
  <div class="flex h-screen">
    <div class="w-64 bg-gradient-to-b from-blue-800 to-blue-600 text-white p-5 shadow-lg">
      <h2 class="text-3xl font-extrabold mb-6">Admin Dashboard</h2>
      <ul class="space-y-4">
        <li><a href="/admin/profile" class="hover:bg-blue-700 rounded-lg px-4 py-2 block">Update Profile</a></li>
        <li><a href="/admin/accounts" class="hover:bg-blue-700 rounded-lg px-4 py-2 block">View Accounts</a></li>
        <li><a href="/admin/products" class="hover:bg-blue-700 rounded-lg px-4 py-2 block">Manage Products</a></li>
        <li><a href="/admin/orders" class="hover:bg-blue-700 rounded-lg px-4 py-2 block">Customer Orders</a></li>
        <li><a href="/admin/reports" class="hover:bg-blue-700 rounded-lg px-4 py-2 block">Reports</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-8">
      <div class="flex justify-between mb-6">
        <h1 class="text-4xl font-semibold text-blue-900">Welcome to the Admin Dashboard</h1>
        <button class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg">Logout</button>
      </div>

      <!-- Account Management Section -->
      <div class="mb-8 bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-blue-800 mb-4">Manage Accounts</h2>
        <div class="mb-4 flex space-x-4">
          <input type="text" id="search-name" placeholder="Search by Name" class="px-4 py-2 w-1/3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600">
          <input type="email" id="search-email" placeholder="Search by Email" class="px-4 py-2 w-1/3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-600">
          <button id="filter-btn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md">Filter</button>
        </div>

        <!-- Account Table -->
        <div class="overflow-x-auto mt-4">
          <table class="w-full table-auto border-collapse">
            <thead class="bg-blue-600 text-white">
              <tr>
                <th class="px-4 py-3 text-left">Name</th>
                <th class="px-4 py-3 text-left">Email</th>
                <th class="px-4 py-3 text-left">Registration Date</th>
                <th class="px-4 py-3 text-center">Actions</th>
              </tr>
            </thead>
            <tbody id="account-list">
              <!-- Dynamic content will be inserted here via AJAX -->
            </tbody>
          </table>
        </div>
        <div id="pagination" class="mt-6 text-center">
          <!-- Dynamic pagination will be inserted here -->
        </div>
      </div>

      <!-- Product Management Section -->
      <div class="mb-8 bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-blue-800 mb-4">Manage Products</h2>
        <div class="flex space-x-4 mb-4">
          <button id="create-product-btn" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md">Create New Product</button>
        </div>

        <!-- Product Table -->
        <div class="overflow-x-auto mt-4">
          <table class="w-full table-auto border-collapse">
            <thead class="bg-blue-600 text-white">
              <tr>
                <th class="px-4 py-3 text-left">Name</th>
                <th class="px-4 py-3 text-left">Category</th>
                <th class="px-4 py-3 text-left">Price</th>
                <th class="px-4 py-3 text-left">Stock Status</th>
                <th class="px-4 py-3 text-center">Actions</th>
              </tr>
            </thead>
            <tbody id="product-list">
              <!-- Dynamic content will be inserted here via AJAX -->
            </tbody>
          </table>
        </div>
        <div id="product-pagination" class="mt-6 text-center">
          <!-- Dynamic pagination will be inserted here -->
        </div>
      </div>

      <!-- Order Management Section -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-blue-800 mb-4">Manage Orders</h2>
        <div class="overflow-x-auto mt-4">
          <table class="w-full table-auto border-collapse">
            <thead class="bg-blue-600 text-white">
              <tr>
                <th class="px-4 py-3 text-left">Order ID</th>
                <th class="px-4 py-3 text-left">Customer</th>
                <th class="px-4 py-3 text-left">Status</th>
                <th class="px-4 py-3 text-left">Creation Time</th>
                <th class="px-4 py-3 text-center">Actions</th>
              </tr>
            </thead>
            <tbody id="order-list">
              <!-- Dynamic content will be inserted here via AJAX -->
            </tbody>
          </table>
        </div>
        <div id="order-pagination" class="mt-6 text-center">
          <!-- Dynamic pagination will be inserted here -->
        </div>
      </div>
    </div>
  </div>

  <script>
    // Placeholder for AJAX functionality
    // Functions for filtering, sorting, pagination, and handling actions (product/account updates)
  </script>

</body>
</html>
