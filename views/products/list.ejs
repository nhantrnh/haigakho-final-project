<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="author" content="Untree.co" />
    <link rel="shortcut icon" href="favicon.png" />

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.0/nouislider.min.css"
    />
    <link href="/css/tiny-slider.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <title>HAGAKO</title>
  </head>

  <body>
    <!-- Start Header/Navigation -->
    <%- include('../partials/header', { page: 'list'}) %>
    <!-- End Header/Navigation -->

    <!-- Start Hero Section -->
    <div class="hero">
      <div class="container">
        <div class="row justify-content-between">
          <div class="col-lg-5">
            <div class="intro-excerpt">
              <h1>Shop</h1>
            </div>
          </div>
          <div class="col-lg-7"></div>
        </div>
      </div>
    </div>
    <!-- End Hero Section -->

    <div class="search-section py-5">
      <div class="container">
        <form id="filterForm" action="/shop" method="GET">
          <div class="row">
            <!-- Search Bar -->
            <div class="col-md-10">
              <input
                type="text"
                name="keyword"
                class="form-control"
                placeholder="Search products by name, description..."
                value="<%= typeof keyword !== 'undefined' ? keyword : '' %>"
                id="searchInput"
              />
            </div>

            <!-- Button to open modal -->
            <div class="col-md-2">
              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#filterModal"
              >
                <i class="fas fa-filter me-2"></i>Filter
              </button>
            </div>

            <!-- Modal for Filters -->
            <div
              class="modal fade"
              id="filterModal"
              tabindex="-1"
              aria-labelledby="filterModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="filterModalLabel">
                      Filter Products
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <form>
                    <div class="modal-body">
                      <!-- Filter by Category -->
                      <h6>Category</h6>
                      <% categories.forEach(function (category) { %>
                      <div class="form-check">
                        <input class="form-check-input me-1" type="checkbox"
                        name="category" value="<%= category.name %>"
                        id="category_<%= category._id %>" <%=
                        selectedCategories.includes(category.name) ? "checked" :
                        "" %> />
                        <label
                          class="form-check-label"
                          for="category_<%= category._id %>"
                        >
                          <%= category.name %>
                        </label>
                      </div>
                      <% }); %>

                      <hr />

                      <!-- Filter by Material -->
                      <h6>Material</h6>
                      <% materials.forEach(function (material) { %>
                      <div class="form-check">
                        <input class="form-check-input me-1" type="checkbox"
                        name="material" value="<%= material %>" id="material_<%=
                        material %>" <%= selectedMaterials.includes(material) ?
                        "checked" : "" %> />
                        <label
                          class="form-check-label"
                          for="material_<%= material %>"
                        >
                          <%= material %>
                        </label>
                      </div>
                      <% }); %>

                      <hr />

                      <!-- Filter by Brands -->
                      <h6>Brand</h6>
                      <% brands.forEach(function (brand) { %>
                      <div class="form-check">
                        <input class="form-check-input me-1" type="checkbox"
                        name="brand" value="<%= brand %>" id="brand_<%= brand
                        %>" <%= selectedBrands.includes(brand) ? "checked" : ""
                        %> />
                        <label
                          class="form-check-label"
                          for="brand_<%= brand %>"
                        >
                          <%= brand %>
                        </label>
                      </div>
                      <% }); %>

                      <hr />

                      <!-- Filter by Price -->
                      <h6>Price Range</h6>
                      <% priceRanges.forEach(function(range) { %>
                      <div class="form-check">
                        <input class="form-check-input me-1" type="checkbox"
                        name="priceRange" value="<%= range.min %>-<%= range.max
                        %>" id="price_<%= range.min %>_<%= range.max %>" <%=
                        selectedPriceRanges.includes(range.min + '-' +
                        range.max) ? 'checked' : '' %> />
                        <label
                          class="form-check-label"
                          for="price_<%= range.min %>_<%= range.max %>"
                        >
                          <%= range.label %>
                        </label>
                      </div>
                      <% }); %>
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Close
                      </button>
                      <button type="submit" class="btn btn-primary">
                        Apply Filters
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- In list.ejs -->
    <% if (activeFilters && activeFilters.length > 0) { %>
    <div class="container mt-3">
      <div class="active-filters">
        <% activeFilters.forEach(function(filter) { %>
        <span class="filter-tag">
          <%= filter.label %>
          <a
            href="?<%= removeFilterFromQuery(filter.type, filter.value) %>"
            class="remove-filter"
            >&times;</a
          >
        </span>
        <% }); %> <% if (activeFilters.length > 1) { %>
        <a href="/shop" class="btn btn-sm btn-outline-danger ms-2">Clear All</a>
        <% } %>
      </div>
    </div>
    <% } %>

    <!-- Start Product Section -->
    <div class="untree_co-section product-section before-footer-section">
      <div class="container">
        <div class="row">
          <% products.forEach(function(product) { %>
          <div class="col-12 col-md-4 col-lg-3 mb-5">
            <a class="product-item" href="/shop/<%= product._id %>">
              <img
                src="<%= product.imageUrl %>"
                class="img-fluid product-thumbnail"
              />
              <h3><%= product.name %></h3>
              <strong class="product-price">$<%= product.price %></strong>
              <span class="icon-cross">
                <img src="/images/cross.svg" class="img-fluid" />
              </span>
            </a>
          </div>
          <% }); %>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <% if (pagination.totalPages > 1) { %>
    <div class="container">
      <nav aria-label="Page navigation">
        <ul class="pagination custom-pagination justify-content-center">
          <!-- Previous -->
          <li
            class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>"
          >
            <a
              class="page-link"
              href="?<%= new URLSearchParams({...currentQuery, page: pagination.prevPage}).toString() %>"
            >
              <i class="fas fa-chevron-left"></i>
            </a>
          </li>

          <!-- First Page -->
          <% if(pagination.page > 3) { %>
          <li class="page-item">
            <a
              class="page-link"
              href="?<%= new URLSearchParams({...currentQuery, page: 1}).toString() %>"
              >1</a
            >
          </li>
          <% if(pagination.page > 4) { %>
          <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %> <% } %>

          <!-- Page Numbers -->
          <% for(let i = Math.max(1, pagination.page - 2); i <=
          Math.min(pagination.totalPages, pagination.page + 2); i++) { %>
          <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
            <a
              class="page-link"
              href="?<%= new URLSearchParams({...currentQuery, page: i}).toString() %>"
              ><%= i %></a
            >
          </li>
          <% } %>

          <!-- Last Page -->
          <% if(pagination.page < pagination.totalPages - 2) { %> <%
          if(pagination.page < pagination.totalPages - 3) { %>
          <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %>
          <li class="page-item">
            <a
              class="page-link"
              href="?<%= new URLSearchParams({...currentQuery, page: pagination.totalPages}).toString() %>"
            >
              <%= pagination.totalPages %>
            </a>
          </li>
          <% } %>

          <!-- Next -->
          <li
            class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>"
          >
            <a
              class="page-link"
              href="?<%= new URLSearchParams({...currentQuery, page: pagination.nextPage}).toString() %>"
            >
              <i class="fas fa-chevron-right"></i>
            </a>
          </li>
        </ul>
      </nav>
    </div>
    <% } %>

    <!-- Start Footer Section -->
    <%- include('../partials/footer') %>

    <!-- End Footer Section -->

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/tiny-slider.js"></script>
    <script src="/js/custom.js"></script>
    <script src="/js/shop.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.0/nouislider.min.js"></script>
  </body>
</html>
