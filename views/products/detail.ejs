<!-- views/products/detail.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="author" content="Untree.co" />
    <link rel="shortcut icon" href="/favicon.png" />
    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap4" />

    <!-- Fix đường dẫn CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/css/tiny-slider.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <title><%= product.name %> | HAGAKO</title>
  </head>
  <body>
    <!-- Navigation -->
    <!-- Start Header/Navigation -->
    <%- include('../partials/header', { page: 'list'}) %>
    <!-- End Header/Navigation -->

    <div class="before-footer-section">
      <div class="container-fluid">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-3 productCart product">
              <div class="rowCustom card align-items-center">
                <div class="column text-center">
                  <img
                    src="<%= product.imageUrl %>"
                    class="product-image"
                    alt="<%= product.name %>"
                  />
                </div>
                <div class="column">
                  <h2 class="product-name text-left" style="font-weight: bold">
                    <%= product.name %>
                  </h2>
                  <p>
                    ID:
                    <span class="product-id" style="font-weight: bold"
                      ><%= product._id %></span
                    >
                  </p>
                  <p>
                    Category:
                    <span style="font-weight: bold"
                      ><%= product.category %></span
                    >
                  </p>
                  <p>
                    Status:
                    <span style="font-weight: bold"
                      ><%= product.stock > 0 ? 'Available' : 'Out of Stock'
                      %></span
                    >
                  </p>
                  <h2
                    class="product-price"
                    style="font-weight: bold; color: red"
                  >
                    <%= new Intl.NumberFormat('en-EN', { style: 'currency',
                    currency: 'USD' }).format(product.price) %>
                  </h2>

                  <p style="display: flex; align-items: center; gap: 5px">
                    Choose amount:
                    <span class="quantity">
                      <button class="minus-btnn pl-3">-</button>
                      <input
                        type="text"
                        class="product-count"
                        value="1"
                        style="width: 50px; text-align: center"
                        max="<%= product.stock %>"
                      />
                      <button class="plus-btnn">+</button>
                    </span>
                  </p>
                  <button class="add-to-cart add-btn">ADD TO CART</button>
                </div>
                <div class="column">
                  <h5 class="titleDetails">DESCRIPTION</h5>
                  <p class="card-text"><%= product.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <!-- Start Footer Section -->
    <%- include('../partials/footer') %>

    <!-- End Footer Section -->

    <!-- Fix đường dẫn JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/tiny-slider.js"></script>
    <script src="/js/custom.js"></script>
  </body>
</html>
